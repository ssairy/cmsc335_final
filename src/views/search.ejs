<section class="card">
  <h1>Find a book</h1>
  <p class="muted">Powered by the Open Library Search API.</p>
  <form method="GET" action="/search/results" class="search-form">
    <label for="q">Search term</label>
    <input
      type="text"
      id="q"
      name="q"
      placeholder="Title, author, or keywords"
      required
    />
    <button type="submit">Search</button>
  </form>
</section>
